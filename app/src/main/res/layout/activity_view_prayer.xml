<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|fill_vertical"
    android:orientation="vertical">


    <!-- DIALOG BOX TITLE -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/edit_icon"
            android:layout_weight=".80"
            android:capitalize="words"
            android:clickable="false"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="Prayer Item Title"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorTextBackground" />

        <ImageButton
            android:id="@+id/edit_icon"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription=""
            android:src="@android:drawable/ic_menu_edit" />


    </RelativeLayout>

    <!-- INFO -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorTextBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:background="@color/colorTextBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <!--TITLES-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@color/colorTextBackground"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/prayer_content"
                    android:layout_width="54dp"
                    android:layout_height="86dp"
                    android:src="@drawable/ic_content" />

            </LinearLayout>

            <!--DYNAMIC VALUES-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight=".8"
                android:background="@color/colorTextBackground"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTextBackground"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This is a sample prayer request. May God bless this application"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorTextEmphasis" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--END INFO-->


    <!--DIVIDER-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

